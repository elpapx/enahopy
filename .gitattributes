# Auto detect text files and perform LF normalization
* text=auto

# Python files should always use LF
*.py text eol=lf

# Notebooks
*.ipynb text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf

# Shell scripts
*.sh text eol=lf
